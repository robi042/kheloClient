<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#C55F11" />
            <corners android:radius="7dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="@dimen/_5sdp">

        <shape android:shape="rectangle">

            <solid android:color="@color/orange" />
            <corners
                android:topLeftRadius="@dimen/_7sdp"
                android:topRightRadius="@dimen/_7sdp" />


        </shape>

    </item>


</layer-list>